<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".fragments.AddTeamFragment">


        <TextView
            android:id="@+id/team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Team Name" />

        <EditText
            android:id="@+id/enter_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Enter Team Name"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/set_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/light_blue"
            android:text="Set Team Name"
            android:textColor="@color/teal_700" />

        <TextView
            android:id="@+id/add_team_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Add Team Member"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/enter_member_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Search Users Here"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:visibility="invisible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/member_list"
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/teal_200"
            android:visibility="invisible" />

        <Button
            android:id="@+id/form_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/light_blue"
            android:text="Form Team"
            android:textColor="@color/teal_700"
            android:visibility="invisible" />


</LinearLayout>